#!/bin/bash

# ┌─────────────────────────────────────────────────┐
# │   File / Version : tool-cleanup / live          │
# │   Author : Mark Hamilton │ Co-Pilot AI assisted │
# │   Script : System maintenance                   │
# │   Package : toolbox                             │
# │   Purpose : System hygiene and cleanup wrapper  │
# └─────────────────────────────────────────────────┘

set -e

LOG=false
DRY_RUN=false
HASHMAP=false

while [[ "$#" -gt 0 ]]; do
    case "$1" in
        --dry-run) DRY_RUN=true ;;
        --log) LOG=true ;;
        --hashmap) HASHMAP=true ;;
        --help)
            echo "Usage: tool-cleanup [--dry-run] [--log] [--hashmap]"
            exit 0 ;;
        *) echo "Unknown option: $1"; exit 1 ;;
    esac
    shift
done

steps=(
    "apt autoremove -y"
    "apt clean"
    "rm -rf /var/cache/apt/*"
    "rm -rf /tmp/*"
)

echo "🧹 Starting Kali cleanup..."
for step in "${steps[@]}"; do
    if $DRY_RUN; then
        echo "[DRY-RUN] Would execute: $step"
    else
        echo "✅ Executing: $step"
        eval "$step"
    fi
done

if $LOG && ! $DRY_RUN; then
    echo "📝 Logging to /var/log/tool-cleanup.log"
    {
        echo "=== tool-cleanup ==="
        date
        for step in "${steps[@]}"; do echo "$step"; done
        echo "===================="
    } >> /var/log/tool-cleanup.log
fi

if $HASHMAP; then
    sha256sum "$0" > .hashmap/tool-cleanup.hash
    date > .hashmap/tool-cleanup.timestamp
fi

echo "🎉 Cleanup complete."
