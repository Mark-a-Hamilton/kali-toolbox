#!/bin/bash

# â”Œâ”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”
# â”‚           kali-cleanup v1.0               â”‚
# â”‚   System hygiene and cleanup wrapper      â”‚
# â””â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”˜

set -e

LOGFILE="/var/log/kali-cleanup.log"
DRY_RUN=false

# â”€â”€ Parse flags â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
while [[ "$#" -gt 0 ]]; do
    case "$1" in
        --dry-run) DRY_RUN=true ;;
        --log) LOG=true ;;
        --help)
            echo "Usage: kali-cleanup [--dry-run] [--log]"
            exit 0
            ;;
        *) echo "Unknown option: $1"; exit 1 ;;
    esac
    shift
done

# â”€â”€ Define cleanup steps â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
cleanup_steps=(
    "apt autoremove -y"
    "apt clean"
    "rm -rf /var/cache/apt/*"
    "rm -rf /tmp/*"
)

# â”€â”€ Execute or simulate â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
echo "ðŸ”§ Starting Kali cleanup..."
for step in "${cleanup_steps[@]}"; do
    if $DRY_RUN; then
        echo "[DRY-RUN] Would execute: $step"
    else
        echo "âœ… Executing: $step"
        eval "$step"
    fi
done

# â”€â”€ Optional logging â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
if [[ "$LOG" == true && "$DRY_RUN" == false ]]; then
    echo "ðŸ“ Logging to $LOGFILE"
    {
        echo "=== kali-cleanup ==="
        date
        for step in "${cleanup_steps[@]}"; do echo "$step"; done
        echo "===================="
    } >> "$LOGFILE"
fi

echo "ðŸŽ‰ Cleanup complete."
